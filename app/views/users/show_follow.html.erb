<% provide(:title, @title) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h5><%= @user.username %></h5>
      <span><%= link_to "View my profile", @user %></span>
      <span><b>Topics:</b> <%= @user.topics.count %></span>
    </section>
  </aside>
  <div class="col-md-8">
    <h3><%= @title %></h3>
    <% if @users.any? %>
      <ul class="users follow">
        <%= render 'users/users' %>
      </ul>
    <% end %>
  </div>
</div>