<div class = "container">
  <div class="row" >
	  <div class="card-panel z-depth-3 amber accent-4" style="padding: 0px;">
	    <span class="white-text">
	      <div class="stats">
	        <table style= "padding: 5px;">
			  <tr>
			    <td class="center">
			      <h4>Topics</h4>  
			    </td>
			  </tr>
			</table>
		  </div>
	    </span>
	  </div>
	</div>
  <ul class="collapsible" data-collapsible="expandable">

    <% @topics.each do |topic| %>
    	<li>
    	  <div class="collapsible-header"><%= link_to( topic.title , topic_path(topic), :'data-no-turbolink' => true) %></div>
        <div class="collapsible-body grey lighten-5"><p><%= topic.description %></p></div>
      </li>
    <% end %>

  </ul>
</div>