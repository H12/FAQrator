<div class="container">
  <div class="row" style="margin-top: 50px">
    <div class="col s10 offset-s1 m8 offset-m2 l8 offset-l2">
      <div class="card white darken-2">
        <div class="card-content grey-text text-darken-3">
          <h5><i class="small material-icons">comment</i> Create a Topic </h5>
          <form id="new_topic" action="/topics" method="POST">
            <%= tag(:input, :type => "hidden", :name => request_forgery_protection_token.to_s, :value => form_authenticity_token) %>
            <div class="input-field white ">
              <input placeholder="Title" name="topic[title]" type="text" class="validate" required>
              <textarea placeholder="Description" name="topic[description]" class="materialize-textarea" required></textarea>
              <p>Custom header color:</p>
              <p>
                <input type="radio" name="topic[primary_color]" id="primary_color_red" value="red">
                <%= label_tag(:primary_color_red, "Red") %>
              </p>
              <p>
                <input type="radio" name="topic[primary_color]" id="primary_color_orange" value="orange">
                <%= label_tag(:primary_color_orange, "Orange") %>
              </p>
              <p>
                <input type="radio" name="topic[primary_color]" id="primary_color_amber" value="amber">
                <%= label_tag(:primary_color_amber, "Yellow") %>
              </p>
              <p>
                <input type="radio" name="topic[primary_color]" id="primary_color_green" value="green">
                <%= label_tag(:primary_color_green, "Green") %>
              </p>
              <p>
                <input type="radio" name="topic[primary_color]" id="primary_color_blue" value="blue">
                <%= label_tag(:primary_color_blue, "Blue") %>
              </p>
              <p>
                <input type="radio" name="topic[primary_color]" id="primary_color_indigo" value="indigo">
                <%= label_tag(:primary_color_indigo, "Indigo") %>
              </p>
              <p>
                <input type="radio" name="topic[primary_color]" id="primary_color_purple" value="purple">
                <%= label_tag(:primary_color_purple, "Violet") %>
              </p>
              <button class="btn-floating btn-medium waves-effect waves-light right red" type="submit" id="new_submit"><i class="material-icons">add</i></button>
              <div class="row">
              </div>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
