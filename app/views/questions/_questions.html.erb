<div class="row">
  <div class="col s12 m10 offset-m1 l8 offset-l2">
    <ul class="collapsible popout hide-on-med-and-down" id="questions" data-collapsible="accordion">
        <%= render partial: @questions, locals: { creator: creator}%>
    </ul>
    <ul class="collapsible hide-on-large-only" id="questions" data-collapsible="accordion">
        <%= render partial: @questions, locals: { creator: creator}%>
    </ul>
  </div>
</div>

<% unless creator %>
  <%= render partial: "questions/new", locals: {questions: @questions, topic_id: topic_id}%>
<% end %>

