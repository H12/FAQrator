<div class="container">
  <h3> New Comment</h3>
  <%= form_for @comment do |form| -%>
    <div class='form-group'>
      <div class='input-group-lg'>
        <%= form.text_field :content, :class => 'form-control', :placeholder => 'comment here' %>
        <br>
        <%= form.text_field :author, :class => 'form-control', :placeholder => 'optional name' %>
      </div>
    </div>
  <%= form.button 'Submit', :type => 'submit', :class => 'btn btn-default' %>
  <% end -%>
</div>