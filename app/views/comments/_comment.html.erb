<li id="comment-<%= comment.id %>">
  <div class="collapsible-header">
    <i class="material-icons text-lighten-1 blue-text">comment</i>
    <%= comment.content %> â€” <%= comment.author %>
    <%= comment.created_at.strftime("%b %d %l:%M %p") %>
    <% if creator && creator != "0" %>
      <%= link_to comment, :class => 'comment-delete right', method: :delete, remote: true do %>
        <i class="material-icons text-lighten-1 grey-text right">delete</i>
      <% end %>
    <% end %>
    <% if comment.response %>
      <i class="material-icons text-lighten-1 blue-text right">expand_more</i>
    <% end %>
  </div>
  <div class="response collapsible-body grey lighten-5">
    <p>
      <% if creator && creator != "0" %>
        <%= render(partial: "comments/response", locals: {comment: comment, creator: creator}) %>
      <% else %>
        <%= comment.response ? comment.response : "<span class='grey-text'>The creator has not replied to this comment.</span>".html_safe %>
      <% end %>
    </p>
  </div>
</li>
